<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_validate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:textAlignment="viewStart">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="0dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_validate_img"
                android:layout_width="197dp"
                android:layout_height="272dp"
                android:layout_marginStart="170dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="169dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/txt_file"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_marginStart="110dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="110dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_validate_img" />

            <TextView
                android:id="@+id/txt_name_validate"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginStart="68dp"
                android:layout_marginTop="52dp"
                android:text="name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_file" />

            <TextView
                android:id="@+id/txt_folderNameValidate"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginStart="40dp"
                android:text="folderName"
                app:layout_constraintStart_toEndOf="@+id/txt_supplier_validate"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/txt_amount_validate"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginStart="40dp"
                android:text="amount"
                app:layout_constraintStart_toEndOf="@+id/txt_name_validate"
                app:layout_constraintTop_toBottomOf="@+id/txt_val_amo" />

            <TextView
                android:id="@+id/txt_supplier_validate"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginStart="68dp"
                android:text="supplier"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_val_sup" />

            <TextView
                android:id="@+id/txt_comment_validate"
                android:layout_width="247dp"
                android:layout_height="70dp"
                android:layout_marginStart="88dp"
                android:text="comment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_val_com" />

            <Button
                android:id="@+id/btn_deny_validate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="88dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Avbryt"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_comment_validate" />

            <Button
                android:id="@+id/btn_accept_validate"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="76dp"
                android:layout_marginBottom="20dp"
                android:text="Spara"
                android:background="@color/colorPrimary"
                android:drawableRight="@drawable/ic_save_black_24dp"
                android:textAlignment="textStart"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_comment_validate" />

            <TextView
                android:id="@+id/txt_val_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="68dp"
                android:layout_marginTop="34dp"
                android:text="Namn"
                android:textColor="@color/grey_color"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/txt_name_validate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_file" />

            <TextView
                android:id="@+id/txt_val_sup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="68dp"
                android:layout_marginTop="35dp"
                android:text="LeverantÃ¶r"
                android:textColor="@color/grey_color"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_name_validate" />

            <TextView
                android:id="@+id/txt_val_amo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="32dp"
                android:text="Belopp"
                android:textColor="@color/grey_color"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/txt_name_validate"
                app:layout_constraintTop_toBottomOf="@+id/txt_file" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="35dp"
                android:text="Mapp"
                android:textColor="@color/grey_color"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/txt_supplier_validate"
                app:layout_constraintTop_toBottomOf="@+id/txt_amount_validate" />

            <TextView
                android:id="@+id/txt_val_com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="88dp"
                android:layout_marginTop="11dp"
                android:text="Kommentar"
                android:textColor="@color/grey_color"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_supplier_validate" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    </android.support.constraint.ConstraintLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:id="@+id/nv">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>